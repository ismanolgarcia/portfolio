---
import { Icon } from 'astro-icon/components';
import { SOCIALS } from '@/config';
---

<div class={'flex gap-2 md:gap-4'}>
  {
    SOCIALS.map(
      (networkS) =>
        networkS.show && (
          <a
            class={`${networkS.name} text-xl md:text-2xl text-color-text  rounded-md p-2 duration-100  `}
            href={networkS.url}
            target="_blank"
            aria-label={networkS.name + '-link'}
          >
            <Icon name={networkS.icon} class="" />
          </a>
        )
    )
  }
</div>
