---
import { Icon } from 'astro-icon/components';
interface SkillCardProps {
  icon: string;
  name: string;
  description: string;
  showDescription?: boolean;
}
const {
  icon,
  name,
  description,
  showDescription = true,
} = Astro.props as SkillCardProps;
---

<div class="flex flex-col gap-2 h-skill-icon bg-neutral-dark p-4 rounded-md">
  <div class="w-10 h-10">
    <Icon
      width={40}
      height={40}
      name={icon}
      class={`${icon === 'nextjs_icon_dark' ? 'text-black' : 'text-highlight-primary'}`}
    />
  </div>
  <h3 class="text-lg font-bold">{name}</h3>
  {showDescription && <p class="text-color-text">{description}</p>}
</div>
